{
	"compilerOptions": {
		"baseUrl": ".",
		"module": "ESNext",
		"target": "ESNext",
		"lib": ["DOM", "ESNext"],
		"strict": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"noUnusedLocals": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@/*": ["./src/*"],
			"~/*": ["./*"]
		},
		"types": ["vite/client","@vue/runtime-core","@types/node"]
	},
	"include": [
		".vitepress/**/*.vue",
	],
	"exclude": ["dist", "node_modules"]
}
